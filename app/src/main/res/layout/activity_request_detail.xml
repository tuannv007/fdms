<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/tools"
    >
    <data>
        <variable
            name="request"
            type="com.framgia.fdms.data.model.Request"
            />
        <variable
            name="viewModel"
            type="com.framgia.fdms.screen.requestdetail.RequestDetailViewModel"
            />
        <import type="android.view.View"/>
        <import type="com.framgia.fdms.utils.Constant"/>
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_red"
            app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:title="@string/title_request_detail"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <android.support.v4.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <LinearLayout
                    android:id="@+id/ontent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="@dimen/dp_15"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal"
                        >
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_list_24dp"
                            android:textSize="@dimen/sp_17"
                            />
                        <TextView
                            android:text="@string/title_request_status"
                            style="@style/TextViewRequestDetail"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:enabled="false"
                            android:gravity="center_vertical|end"
                            android:text="@{request.requestStatus}"
                            android:textStyle="bold"
                            bind:deviceStatus="@{request.requestStatus}"
                            />
                    </LinearLayout>
                    <View style="@style/ViewRequestDetail"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:gravity="center"
                        android:orientation="horizontal"
                        >
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_title"
                            android:textSize="@dimen/sp_17"
                            />
                        <TextView
                            android:text="@string/title_title"
                            style="@style/TextViewRequestDetail"
                            />
                        <EditText
                            android:enabled="@{viewModel.isEdit}"
                            android:text="@={request.title}"
                            style="@style/EditTextStyleRequestDetail"
                            />
                    </LinearLayout>
                    <View style="@style/ViewRequestDetail"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:gravity="center"
                        >
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_description_black_24px"
                            />
                        <TextView
                            android:text="@string/title_description"
                            style="@style/TextViewRequestDetail"
                            />
                        <EditText
                            android:enabled="@{viewModel.isEdit}"
                            android:gravity="center_vertical|end"
                            android:lines="3"
                            android:maxLines="10"
                            android:text="@={request.description}"
                            style="@style/EditTextStyleRequestDetail"
                            />
                    </LinearLayout>
                    <View style="@style/ViewRequestDetail"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:gravity="center"
                        >
                        <ImageView
                            android:layout_width="@dimen/dp_24"
                            android:layout_height="@dimen/dp_24"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_persion_teal_24dp"
                            />
                        <TextView
                            android:text="@string/title_request_for"
                            style="@style/TextViewRequestDetail"
                            />
                        <EditText
                            android:enabled="false"
                            android:text="@={request.requestFor}"
                            style="@style/EditTextStyleRequestDetail"
                            />
                    </LinearLayout>
                    <View style="@style/ViewRequestDetail"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:gravity="center"
                        >
                        <ImageView
                            android:layout_width="@dimen/dp_24"
                            android:layout_height="@dimen/dp_24"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_persion_teal_24dp"
                            />
                        <TextView
                            android:text="@string/title_create_by"
                            style="@style/TextViewRequestDetail"
                            />
                        <EditText
                            android:enabled="false"
                            android:text="@={request.creater}"
                            style="@style/EditTextStyleRequestDetail"
                            />
                    </LinearLayout>
                    <View style="@style/ViewRequestDetail"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:gravity="center"
                        >
                        <ImageView
                            android:layout_width="@dimen/dp_24"
                            android:layout_height="@dimen/dp_24"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_persion_teal_24dp"
                            />
                        <TextView
                            android:text="@string/title_update_by"
                            android:textSize="@dimen/sp_14"
                            style="@style/TextViewRequestDetail"
                            />
                        <EditText
                            android:enabled="false"
                            android:text="@{request.updater}"
                            style="@style/EditTextStyleRequestDetail"
                            />
                    </LinearLayout>
                    <View style="@style/ViewRequestDetail"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/dp_10"
                        android:gravity="center"
                        android:onClick="@{() -> viewModel.addAtItem()}"
                        android:padding="@dimen/dp_5"
                        android:visibility="@{viewModel.isEdit?View.VISIBLE :View.GONE}"
                        >
                        <ImageView
                            android:layout_width="@dimen/dp_20"
                            android:layout_height="@dimen/dp_20"
                            android:layout_marginRight="@dimen/dp_10"
                            android:background="@drawable/ic_add_24dp"
                            />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/title_add_request_detail"
                            android:textSize="@dimen/sp_16"
                            android:textStyle="bold"
                            />

                    </LinearLayout>
                    <android.support.v7.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        app:layoutManager="LinearLayoutManager"
                        app:recyclerAdapter="@{viewModel.adapter}"
                        app:reverseLayout="true"
                        />

                </LinearLayout>

            </android.support.v4.widget.NestedScrollView>

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/fab_accep"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="@dimen/dp_16"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginRight="@dimen/dp_16"
                android:clickable="true"
                android:onClick="@{() -> viewModel.onSubmitEditClick()}"
                android:src="@drawable/ic_accept"
                app:backgroundTint="@color/color_green_600"
                app:fabSize="mini"
                app:rippleColor="@color/color_green_600"
                app:visibleAnim="@{viewModel.isEdit}"
                />

            <android.support.design.widget.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/dp_16"
                android:layout_toLeftOf="@+id/fab_accep"
                android:clickable="true"
                android:onClick="@{() -> viewModel.onCancelEditClick()}"
                android:src="@drawable/ic_cancel"
                app:backgroundTint="@color/color_red_aceent_700"
                app:fabSize="mini"
                app:rippleColor="@color/color_red_500"
                app:visibleAnim="@{viewModel.isEdit}"
                />
            <com.github.clans.fab.FloatingActionMenu
                android:id="@+id/float_action_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                app:menu_colorNormal="@color/color_red_500"
                >
                <com.github.clans.fab.FloatingActionButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="@{() -> viewModel.initEditRequest()}"
                    android:src="@drawable/ic_edit_white_24dp"
                    android:visibility="@{viewModel.getStatusRequest().equals(Constant.DeviceStatus.DONE) ? View.GONE : View.VISIBLE}"
                    app:fab_label="@string/action_edit"
                    app:fab_size="mini"
                    />
            </com.github.clans.fab.FloatingActionMenu>
        </RelativeLayout>

    </LinearLayout>
</layout>
