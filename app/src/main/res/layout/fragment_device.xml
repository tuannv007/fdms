<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <data>

        <import type="com.framgia.fdms.screen.device.DeviceViewModel.Tab"/>
        <import type="android.view.View"/>
        <variable
            name="viewModel"
            type="com.framgia.fdms.screen.device.DeviceViewModel"
            />


    </data>
    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/dp_1"
                    >

                    <TextView
                        android:id="@+id/image_request_dashboard"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="@dimen/dp_3"
                        android:layout_marginRight="@dimen/dp_3"
                        android:background="@drawable/bg_circle_red"
                        android:onClick="@{()->viewModel.onClickChangeTab(viewpager, Tab.TAB_MY_DEVICE)}"
                        android:paddingBottom="@dimen/dp_5"
                        android:paddingLeft="@dimen/dp_20"
                        android:paddingRight="@dimen/dp_20"
                        android:paddingTop="@dimen/dp_5"
                        android:text="@string/title_my_device"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/sp_12"
                        android:textStyle="bold"
                        bind:tabDashBoard="@{viewModel.tab}"

                        />

                    <TextView
                        android:id="@+id/image_device_dashboard"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg_circle_grey"
                        android:gravity="center_vertical"
                        android:onClick="@{()->viewModel.onClickChangeTab(viewpager, Tab.TAB_MANAGE_DEVICE)}"
                        android:paddingBottom="@dimen/dp_5"
                        android:paddingLeft="@dimen/dp_10"
                        android:paddingRight="@dimen/dp_10"
                        android:paddingTop="@dimen/dp_5"
                        android:text="@string/title_manager_device"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/sp_12"
                        android:textStyle="bold"
                        android:visibility="@{viewModel.bo ? View.VISIBLE : View.GONE}"
                        bind:tabDashBoard="@{viewModel.tab}"
                        />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v4.view.ViewPager
                android:id="@+id/viewpager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                bind:adapter="@{viewModel.adapter}"
                bind:model="@{viewModel}"
                />
        </LinearLayout>
        <com.getbase.floatingactionbutton.FloatingActionsMenu
            android:id="@+id/float_action_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_gravity="bottom|end"
            android:layout_margin="@dimen/dp_16"
            android:visibility="@{viewModel.bo ? View.VISIBLE : View.GONE}"
            app:backgroundTint="@color/colorPrimary"
            app:fab_addButtonColorNormal="@color/colorPrimary"
            app:fab_addButtonColorPressed="@color/color_grey_757575"
            app:fab_addButtonPlusIconColor="@color/color_white"
            app:fab_labelStyle="@style/FloatMenuTitleStyle"
            >
            <com.getbase.floatingactionbutton.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="@{() -> viewModel.onStartReturnDevice(floatActionMenu)}"
                app:fab_colorNormal="@android:color/white"
                app:fab_colorPressed="@color/color_seashell"
                app:fab_icon="@drawable/ic_return_teal_24px"
                app:fab_size="mini"
                app:fab_title="@string/action_return_device"
                />
            <com.getbase.floatingactionbutton.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="@{() -> viewModel.onRegisterDeviceClick(floatActionMenu)}"
                app:fab_colorNormal="@android:color/white"
                app:fab_colorPressed="@color/color_seashell"
                app:fab_icon="@drawable/ic_add_teal_24dp"
                app:fab_size="mini"
                app:fab_title="@string/action_add_new_device"
                />
        </com.getbase.floatingactionbutton.FloatingActionsMenu>
    </android.support.design.widget.CoordinatorLayout>
</layout>

